<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Bluetooth Status Text -->
    <TextView
        android:id="@+id/statusBluetoothTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bluetooth_status"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="8dp" />

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/btnTurnOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/turn_on" />

        <Button
            android:id="@+id/btnTurnOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/turn_off" />

        <Button
            android:id="@+id/btnDiscover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/discover_devices" />
    </LinearLayout>

    <!-- Paired Devices Header -->
    <TextView
        android:id="@+id/pairedTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/paired_devices"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:paddingVertical="8dp" />

    <!-- ListView for New Devices -->
    <ListView
        android:id="@+id/listViewDevices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="8dp" />

    <!-- TextViews to display received strings -->
    <TextView
        android:id="@+id/receivedString1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KM/h: "
        android:textSize="16sp"
        android:paddingVertical="8dp" />

    <TextView
        android:id="@+id/receivedString2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RPM: "
        android:textSize="16sp"
        android:paddingVertical="8dp" />

    <!-- LineChart to display the graph -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp" />


</LinearLayout>