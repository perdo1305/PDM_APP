<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/search_ble_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search for BLE Devices"
        android:layout_marginBottom="16dp" />

    <!-- Line Chart -->

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/live_data_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp" />

    <!-- Current Value Display -->
    <TextView
        android:id="@+id/current_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_value_n_a"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Input for Adding Data -->
    <EditText
        android:id="@+id/input_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_a_value" />

    <!-- Button to Add Data -->
    <Button
        android:id="@+id/add_value_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_value" />
</LinearLayout>
